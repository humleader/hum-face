{
  "apps": [
    {
      "name": "face-staging",
      "script": "./server/server.js",
      "instances": "2",
      "exec_mode": "cluster",
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "staging",
        "BLUEBIRD_WARNINGS": 0
      }
    },
    {
      "name": "face-production",
      "script": "./server/server.js",
      "instances": "4",
      "out_file": "../output/face/logs/app.log",
      "error_file": "../output/face/logs/error.log",
      "exec_mode": "cluster",
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "BLUEBIRD_WARNINGS": 0
      }
    }
  ]
}
